  <script>
    const colorsEl = document.getElementById("colors");

    const btnStart      = document.getElementById("btnStart");
    const btnStartText  = document.getElementById("btnStartText");
    const btnStop       = document.getElementById("btnStop");
    const btnStopText   = document.getElementById("btnStopText");
    const startBtnWrap  = document.getElementById("startBtnWrap");
    const hintTitle     = document.getElementById("hintTitle");

    const backBtn  = document.getElementById("backBtn");

    const targetPadBtn    = document.getElementById("targetPadBtn");
    const targetPadCircle = document.getElementById("targetPadCircle");
    const targetPadNum    = document.getElementById("targetPadNum");

    const scoreRunEl   = document.getElementById("scoreRun");
    const scoreDisplayEl = document.getElementById("scoreDisplay");

    const shadowQ0 = document.getElementById("shadowQ0");
    const shadowQ1 = document.getElementById("shadowQ1");
    const shadowQ2 = document.getElementById("shadowQ2");
    const shadowQ3 = document.getElementById("shadowQ3");
    const allShadows = [shadowQ0, shadowQ1, shadowQ2, shadowQ3];

    const cubeShadowLayer = document.getElementById("cubeShadowLayer");

    const wFaceGroup = document.getElementById("wFaceGroup");

    const kipGroups = {
      "0_1": document.getElementById("kipGroup_0_1"),
      "1_2": document.getElementById("kipGroup_1_2"),
      "2_0": document.getElementById("kipGroup_2_0"),
    };

    const kspSlider   = document.getElementById("kspSlider");
    const kspValueEl  = document.getElementById("kspValue");
    const soundToggle = document.getElementById("soundToggle");
    const soundIcon   = document.getElementById("soundIcon");

    // Intro
    const introOverlay = document.getElementById("introOverlay");
    const introStartBtn = document.getElementById("introStartBtn");
    const introBackBtn  = document.getElementById("introBackBtn");

    function sleep(ms){ return new Promise(res => setTimeout(res, ms)); }

    let activeKipId = "0_1";
    function getKipId(fromFace, toFace){ return `${fromFace}_${toFace}`; }

    function setActiveKipGroup(kipId){
      activeKipId = kipId;
      Object.entries(kipGroups).forEach(([id, el]) => {
        if(!el) return;
        if(id === kipId) el.classList.remove("hidden");
        else el.classList.add("hidden");
      });
      updateShadowVisibility();
    }

    const slotTargetsW = [
      wFaceGroup.querySelector('[data-slot="S1"] .num > span'),
      wFaceGroup.querySelector('[data-slot="S2"] .num > span'),
      wFaceGroup.querySelector('[data-slot="S3"] .num > span'),
      wFaceGroup.querySelector('[data-slot="S4"] .num > span'),
    ];

    const slotElsW = [
      wFaceGroup.querySelector('[data-slot="S1"]'),
      wFaceGroup.querySelector('[data-slot="S2"]'),
      wFaceGroup.querySelector('[data-slot="S3"]'),
      wFaceGroup.querySelector('[data-slot="S4"]'),
    ];

    // Nummern-F√ºllungen (Map eigentlich nicht n√∂tig, aber gelassen)
    let lockedColorsByNumber = new Map();
    function resetLockedColors(){ lockedColorsByNumber = new Map(); }
    function applyPersistentFill(slotEl, n){
      if(!slotEl) return;
      slotEl.style.removeProperty("--slot-fill");
    }

    const kipSlotCache = {};
    function getKipSlots(kipId){
      if(kipSlotCache[kipId]) return kipSlotCache[kipId];
      const g = kipGroups[kipId];
      if(!g){
        kipSlotCache[kipId] = {
          rightSpans:[null,null,null,null],
          leftSpans:[null,null,null,null],
          rightEls:[null,null,null,null],
          leftEls:[null,null,null,null]
        };
        return kipSlotCache[kipId];
      }

      const rightEls = [
        g.querySelector('[data-slot="W1_1"]'),
        g.querySelector('[data-slot="W1_2"]'),
        g.querySelector('[data-slot="W1_3"]'),
        g.querySelector('[data-slot="W1_4"]'),
      ];
      const leftEls = [
        g.querySelector('[data-slot="W2_A"]'),
        g.querySelector('[data-slot="W2_B"]'),
        g.querySelector('[data-slot="W2_C"]'),
        g.querySelector('[data-slot="W2_D"]'),
      ];

      const rightSpans = [
        g.querySelector('[data-slot="W1_1"] .num > span'),
        g.querySelector('[data-slot="W1_2"] .num > span'),
        g.querySelector('[data-slot="W1_3"] .num > span'),
        g.querySelector('[data-slot="W1_4"] .num > span'),
      ];
      const leftSpans = [
        g.querySelector('[data-slot="W2_A"] .num > span'),
        g.querySelector('[data-slot="W2_B"] .num > span'),
        g.querySelector('[data-slot="W2_C"] .num > span'),
        g.querySelector('[data-slot="W2_D"] .num > span'),
      ];

      kipSlotCache[kipId] = { rightSpans, leftSpans, rightEls, leftEls };
      return kipSlotCache[kipId];
    }

    const allColors = ["violett","blau","gruen","orange"];

    const HEADER_ROW_OFFSET = 2;
    const colMap = {A:1,B:2,C:3,D:4,E:5,F:6,G:7,H:8};

    function numVar(name){
      return parseFloat(getComputedStyle(document.documentElement).getPropertyValue(name)) || 0;
    }

    function coordToXY(coord){
      const row = parseInt(coord, 10);
      const colLetter = coord.replace(String(row), "");
      return { row, col: colMap[colLetter], colLetter };
    }

    function clearHitPulse(){
      document.querySelectorAll(".slot").forEach(el => {
        el.classList.remove("kippPulse");
        const s = el.querySelector(".num > span");
        if(s) s.classList.remove("kippPulse");
      });
    }

    function updateShadowVisibility(){
      const isKipVisible = Object.values(kipGroups).some(g => g && !g.classList.contains("hidden"));
      const isWVisible = !wFaceGroup.classList.contains("hidden");

      if(isKipVisible){
        allShadows.forEach((s, i) => {
          if(i === rotIndex) s.classList.add("visible");
          else s.classList.remove("visible");
        });
      } else {
        allShadows.forEach(s => s.classList.remove("visible"));
      }

      if(isWVisible) cubeShadowLayer.classList.add("visible");
      else cubeShadowLayer.classList.remove("visible");
    }

    function showW(){
      Object.values(kipGroups).forEach(g => g.classList.add("hidden"));
      wFaceGroup.classList.remove("hidden");
      updateShadowVisibility();
    }

    function showKip(){
      wFaceGroup.classList.add("hidden");
      updateShadowVisibility();
    }

    function mapHiddenToVisible_CW(face){
      const [f1,f2,f3,f4] = face;
      return [f4, f3, f2, f1];
    }

    function renderNumber(span, n){
      if(!span) return;
      span.classList.remove("twodigit");

      if(n === null || n === undefined){
        span.textContent = "";
        span.style.letterSpacing = "";
        return;
      }
      const text = (n === 9 || n === 6) ? `${n}.` : String(n);
      span.textContent = text;

      if(n >= 10) span.classList.add("twodigit");
      else span.style.letterSpacing = "";
    }

    function renderSlot(slotEl, spanEl, n){
      renderNumber(spanEl, n);
      applyPersistentFill(slotEl, n);
    }

    function renderKip(){
      setRotationSnap();

      const curr = sets[faceIndex];
      const nextFaceIndex = (faceIndex + 1) % 3;
      const next = sets[nextFaceIndex];

      const kipId = getKipId(faceIndex, nextFaceIndex);
      setActiveKipGroup(kipId);

      const { rightSpans, leftSpans, rightEls, leftEls } = getKipSlots(kipId);

      for(let i=0;i<4;i++) renderSlot(rightEls[i], rightSpans[i], curr[i]);

      const nextPreview = mapHiddenToVisible_CW(next);
      for(let i=0;i<4;i++) renderSlot(leftEls[i], leftSpans[i], nextPreview[i]);
    }

    function getUniqueRandomNumbers(count, min, max){
      const pool = [];
      for(let i=min; i<=max; i++) pool.push(i);
      for(let i=pool.length-1; i>0; i--){
        const j = Math.floor(Math.random() * (i+1));
        [pool[i], pool[j]] = [pool[j], pool[i]];
      }
      return pool.slice(0, count);
    }

    // TIMING via KSP
    let currentKSP = 1;          // 1..6
    const TARGET_MIN = 0.55;
    const STEP_MAX   = 0.80;
    let targetTimeMul = 1;

    function clamp(v, a, b){ return Math.max(a, Math.min(b, v)); }
    function lerp(a,b,t){ return a + (b - a) * t; }

    function updateTargetTimeMulByDraws(dummy){
      // F√ºr KIPP TIPP: einfache KSP-Steuerung, kein Deck-Progress
      targetTimeMul = 1;
    }

    function getTiming(){
      const v = currentKSP; // 1..6

      const baseHold = Math.max(520, Math.round(2600 - v * 350));
      const baseKip  = Math.max(160, Math.round(baseHold * 0.50));
      const baseW    = baseHold;

      const mul = clamp(targetTimeMul || 1, TARGET_MIN, 1);

      const hold = Math.max(260, Math.round(baseHold * mul));
      const kip  = Math.max(120, Math.round(baseKip  * mul));
      const wfull= Math.max(260, Math.round(baseW    * mul));

      return { holdMs: hold, kipMs: kip, wMs: wfull };
    }

    const rotDeg = [0, 90, 180, 270];
    let rotIndex  = 0;
    let faceIndex = 0;

    function setRotationSnap(){
      const deg = rotDeg[rotIndex];
      wFaceGroup.style.setProperty("--rot", deg + "deg");
      Object.values(kipGroups).forEach(g => g.style.setProperty("--rot", deg + "deg"));
      cubeShadowLayer.style.setProperty("--rot", deg + "deg");
      updateShadowVisibility();
    }

    function advanceFullCW(){
      rotIndex  = (rotIndex + 1) % 4;
      faceIndex = (faceIndex + 1) % 3;
      setRotationSnap();
    }

    function renderW(){
      setRotationSnap();
      const curr = sets[faceIndex];
      for(let i=0;i<4;i++) renderSlot(slotElsW[i], slotTargetsW[i], curr[i]);
    }

    // Zahlen setzen
    let planned = [
      [null,null,null,null],
      [null,null,null,null],
      [null,null,null,null],
    ];
    let sets = [
      [null,null,null,null],
      [null,null,null,null],
      [null,null,null,null],
    ];

    function reroll12_keepAssigned(){
      const twelve = getUniqueRandomNumbers(12, 1, 12);
      planned[0] = twelve.slice(0,4);
      planned[1] = twelve.slice(4,8);
      planned[2] = twelve.slice(8,12);

      sets = [
        planned[0].slice(),
        planned[1].slice(),
        planned[2].slice(),
      ];

      rotIndex  = 0;
      faceIndex = 0;
      setRotationSnap();
    }

    // Laufsteuerung
    let runningKipp = false;
    let previewToken = 0;

    function cancelPreview(){
      previewToken++;
      runningKipp = false;
    }

    async function waitOrPause(type, myToken, factor = 1){
      const startTime = Date.now();
      while(myToken === previewToken){
        const T = getTiming();
        const base = (type === "kip") ? T.kipMs : T.wMs;
        const targetMs = Math.max(40, Math.round(base * (factor || 1)));

        const elapsed = Date.now() - startTime;
        if(elapsed >= targetMs) break;
        await sleep(50);
      }
      return (myToken === previewToken);
    }

    async function runSchauKippSequence(steps, opts = {}){
      if(runningKipp) return;
      runningKipp = true;

      const kipFactor = (opts && opts.kipFactor) ? opts.kipFactor : 1;
      const myToken = ++previewToken;

      showW();
      renderW();
      if(!await waitOrPause("w", myToken, 1)){ runningKipp=false; return; }

      const totalSteps = Math.max(1, steps);

      for(let i=0;i<steps;i++){
        const tStep = (totalSteps <= 1) ? 0 : (i / (totalSteps - 1));
        const stepMul = lerp(1.0, STEP_MAX, tStep);

        showKip();
        renderKip();
        if(!await waitOrPause("kip", myToken, kipFactor * stepMul)){ runningKipp=false; return; }

        advanceFullCW();
        showW();
        renderW();
        if(!await waitOrPause("w", myToken, stepMul)){ runningKipp=false; return; }
      }

      runningKipp = false;
    }

    // KIPP TIPP LOGIK

    // ZS/ZF-Mapping
    const ZS_COORDS_BY_ROT_ZSINDEX = [
      ["4B","3B","2C","2D"],
      ["2E","2F","3G","4G"],
      ["5G","6G","7F","7E"],
      ["7D","7C","6B","5B"],
    ];
    const DOM_SLOT_TO_ZS_INDEX = [2, 1, 3, 4];

    const colorFieldCoords = {
      'violett': ['3A','8D','8E','3H'],
      'blau':    ['1F','8F','4A','5A'],
      'gruen':   ['1C','8C','4H','5H'],
      'orange':  ['1D','1E','6A','6H']
    };

    const COLOR_BY_ZF_COORD = (() => {
      const m = {};
      for(const [c, arr] of Object.entries(colorFieldCoords)){
        for(const coord of arr) m[coord] = c;
      }
      return m;
    })();

    function getAdjacentZFCoordForZS(zsCoord){
      const p = coordToXY(zsCoord);
      if(p.colLetter === "B") return `${p.row}A`;
      if(p.colLetter === "G") return `${p.row}H`;
      if(p.row === 2) return `1${p.colLetter}`;
      if(p.row === 7) return `8${p.colLetter}`;
      return null;
    }

    // sichtbare Infos f√ºr beliebige Rotation
    function getVisibleInfosAt(rotIdx, faceIdxLocal){
      const curr = sets[faceIdxLocal];
      const zsCoords = ZS_COORDS_BY_ROT_ZSINDEX[rotIdx];
      const out = [];
      for(let i=0;i<4;i++){
        const zsIndex = DOM_SLOT_TO_ZS_INDEX[i];
        const zsCoord = zsCoords[zsIndex - 1];
        const num = curr[i];
        const zfCoord = getAdjacentZFCoordForZS(zsCoord);
        const col = zfCoord ? COLOR_BY_ZF_COORD[zfCoord] : null;
        out.push({ num, zsCoord, color: col });
      }
      return out;
    }

    // SCORE & SPIELZUSTAND
    let hitsCount = 0;
    const MAX_TARGETS = 12;
    let targetsDone = 0;

    function updateScore(){
      const s = String(hitsCount).padStart(2,"0");
      if(scoreRunEl)   scoreRunEl.textContent   = s;
      if(scoreDisplayEl) scoreDisplayEl.textContent = s;
    }

    // KIPP TIPP ZUSTAND
    let gameRunning = false;
    let currentTarget = null;       // {num,color}
    let targetActive = false;
    let stepsSinceTargetStart = 0;
    let hadHitWindow = false;
    let hitWindowActive = false;

    // SOUND
    let soundEnabled = true;
    let sndKipp    = null;
    let sndHit     = null;
    let sndMiss    = null;

    function initSounds(){
      try{
        sndKipp = new Audio("kipp.mp3");
        sndHit  = new Audio("hit.mp3");
        sndMiss = new Audio("miss.mp3");
      }catch(e){
        sndKipp = sndHit = sndMiss = null;
      }
    }

    function playSound(a){
      if(!soundEnabled || !a) return;
      try{
        a.currentTime = 0;
        a.play();
      }catch(e){}
    }
    function playKippSound(){ playSound(sndKipp); }
    function playHitSound(){ playSound(sndHit); }
    function playMissSound(){ playSound(sndMiss); }

    // TARGET PAD UI
    function resetTargetPadUI(){
      targetPadBtn.style.background =
        `linear-gradient(135deg, rgba(255,255,255,0.14), rgba(0,0,0,0.05)), var(--slot-fill)`;
      targetPadCircle.style.display = "block";
      targetPadNum.textContent = "";
      targetPadNum.classList.remove("twodigit");
    }

    function applyTargetToPad(target){
      if(!target) return;
      targetPadBtn.style.background =
        `linear-gradient(135deg, rgba(255,255,255,0.14), rgba(0,0,0,0.05)), var(--${target.color})`;

      targetPadCircle.style.display = "none";

      const text = (target.num === 9 || target.num === 6) ? `${target.num}.` : String(target.num);
      targetPadNum.textContent = text;

      targetPadNum.classList.remove("twodigit");
      if(target.num >= 10) targetPadNum.classList.add("twodigit");
    }

    // NEUES ZIEL (garantiert in 4..11 Kipps erreichbar)
    function pickRandom(arr){
      return arr[Math.floor(Math.random() * arr.length)];
    }

    function createNewTarget(){
      stepsSinceTargetStart = 0;
      hadHitWindow = false;
      hitWindowActive = false;
      targetActive = true;

      const candidates = [];
      for(let offset=4; offset<=11; offset++){
        const futureRot  = (rotIndex + offset) % 4;
        const futureFace = (faceIndex + offset) % 3;
        const vis = getVisibleInfosAt(futureRot, futureFace);
        vis.forEach(info => {
          if(info.num != null && info.color){
            candidates.push({ num: info.num, color: info.color });
          }
        });
      }

      if(candidates.length === 0){
        const visNow = getVisibleInfosAt(rotIndex, faceIndex);
        const fallback = visNow.find(i => i.num != null && i.color) || {num:1,color:"violett"};
        currentTarget = fallback;
      } else {
        currentTarget = pickRandom(candidates);
      }

      applyTargetToPad(currentTarget);
      targetPadBtn.classList.remove("hidden");
    }

    function resolveTarget(success){
      targetActive = false;
      hitWindowActive = false;
      stepsSinceTargetStart = 0;
      hadHitWindow = false;

      targetsDone++;

      if(success){
        hitsCount++;
        updateScore();
        playHitSound();
      }else{
        playMissSound();
      }

      if(targetsDone >= MAX_TARGETS){
        endGame();
      }else{
        createNewTarget();
      }
    }

    function onFullKipCompleted(){
      if(!gameRunning) return;

      playKippSound();

      if(!currentTarget || !targetActive) return;

      stepsSinceTargetStart++;
      const step = stepsSinceTargetStart;

      const vis = getVisibleInfosAt(rotIndex, faceIndex);
      const isVisibleNow = vis.some(info =>
        info.num === currentTarget.num && info.color === currentTarget.color
      );

      if(step >= 4 && step <= 11 && isVisibleNow){
        hitWindowActive = true;
        hadHitWindow = true;
      } else {
        hitWindowActive = false;
      }

      if(step > 11){
        resolveTarget(false);
      }
    }

    async function kippLoop(){
      while(gameRunning){
        await runSchauKippSequence(1, { kipFactor: 1 });
        if(!gameRunning) break;
        onFullKipCompleted();
      }
    }

    function startGame(){
      if(gameRunning) return;

      // Reset Spielzustand
      gameRunning = true;
      hitsCount = 0;
      targetsDone = 0;
      updateScore();

      resetLockedColors();
      resetTargetPadUI();

      const scoreEl = scoreDisplayEl;
      if(scoreEl){
        scoreEl.classList.remove("finalVisible", "scorePulse");
        scoreEl.style.removeProperty("opacity");
      }

      // Cube neu mischen
      reroll12_keepAssigned();
      showW();
      renderW();

      // UI
      btnStart.classList.add("hidden");
      btnStop.classList.remove("hidden");
      btnStartText.classList.remove("pulse");
      kspSlider.disabled = true;

      targetPadBtn.classList.remove("hidden");

      hintTitle.textContent = "KIPP TIPP ‚Äì TRIFF DAS ZIEL";

      createNewTarget();
      kippLoop();
    }

    function stopGame(){
      if(!gameRunning) return;
      gameRunning = false;
      cancelPreview();

      targetActive = false;
      hitWindowActive = false;
      currentTarget = null;
      resetTargetPadUI();
      targetPadBtn.classList.add("hidden");

      btnStop.classList.add("hidden");
      btnStart.classList.remove("hidden");
      btnStartText.classList.add("pulse");
      kspSlider.disabled = false;

      hintTitle.textContent = "KIPP TIPP";
    }

    function endGame(){
      gameRunning = false;
      cancelPreview();

      btnStop.classList.add("hidden");
      btnStart.classList.remove("hidden");
      btnStartText.classList.add("pulse");
      kspSlider.disabled = false;

      hintTitle.textContent = "SCHLUSS ‚Äì ERGEBNIS";

      targetActive = false;
      hitWindowActive = false;
      currentTarget = null;
      targetPadBtn.classList.add("hidden");

      if(scoreDisplayEl){
        scoreDisplayEl.classList.add("finalVisible","scorePulse");
      }
    }

    // KSP UI
    kspSlider.addEventListener("input", () => {
      const v = parseInt(kspSlider.value,10) || 1;
      currentKSP = Math.min(6, Math.max(1, v));
      kspValueEl.textContent = "KSP " + currentKSP;
    });

    // SOUND TOGGLE
    soundToggle.addEventListener("click", () => {
      soundEnabled = !soundEnabled;
      if(soundEnabled){
        soundIcon.classList.remove("muted");
      }else{
        soundIcon.classList.add("muted");
      }
    });

    // TARGET PAD CLICK
    targetPadBtn.addEventListener("click", () => {
      if(!gameRunning || !currentTarget || !targetActive) return;

      if(hitWindowActive){
        resolveTarget(true);
      }else{
        resolveTarget(false);
      }
    });

    // START/STOP BUTTONS
    btnStart.addEventListener("click", () => {
      startGame();
    });

    btnStop.addEventListener("click", () => {
      stopGame();
    });

    // Zur√ºck
    backBtn.addEventListener("click", () => {
      if(gameRunning){
        stopGame();
      }
      window.location.href = "index.html";
    });

    function placeColorSquare(coord, cls, cellPx, sizePx){
      const { row, col } = coordToXY(coord);
      const visualRow = row + HEADER_ROW_OFFSET;

      const leftCell = (col - 1) * cellPx;
      const topCell  = (visualRow - 1) * cellPx;

      const pad = (cellPx - sizePx) / 2;
      const x = leftCell + pad;
      const y = topCell  + pad;

      const d = document.createElement("div");
      d.className = "colorSq " + cls;
      d.style.left = x + "px";
      d.style.top  = y + "px";
      colorsEl.appendChild(d);
    }

    function rebuildColors(){
      colorsEl.innerHTML = "";

      const cellPx = numVar("--cell") || 142;
      const sizePx = numVar("--colorSize") || 126;

      const placements = [
        ["1C","c-gruen"],  ["1D","c-orange"], ["1E","c-orange"], ["1F","c-blau"],
        ["8C","c-gruen"],  ["8D","c-violett"],["8E","c-violett"],["8F","c-blau"],
        ["3A","c-violett"],["4A","c-blau"],   ["5A","c-blau"],   ["6A","c-orange"],
        ["3H","c-violett"],["4H","c-gruen"],  ["5H","c-gruen"],  ["6H","c-orange"],
      ];

      for(const [coord, cls] of placements){
        placeColorSquare(coord, cls, cellPx, sizePx);
      }
    }

    function positionScoreRun(cellPx){
      const run = scoreRunEl;
      if(!run) return;

      const col = 8;
      const leftCell = (col - 1) * cellPx;
      const centerX = leftCell + (cellPx / 2);
      const headerY = 1.0 * cellPx;
      const centerY = headerY;

      run.style.left = centerX + "px";
      run.style.top  = centerY + "px";

      const fontSize = cellPx * 0.56;
      run.style.fontSize = fontSize + "px";
    }

    function positionScoreDisplay(cellPx){
      const score = scoreDisplayEl;
      if(!score) return;

      const row = 6;
      const col = 4;
      const visualRow = row + HEADER_ROW_OFFSET;

      const leftCell = (col - 1) * cellPx;
      const topCell  = (visualRow - 1) * cellPx;

      const centerX = leftCell + (2 * cellPx) / 2;
      const centerY = topCell  + (cellPx) / 2;

      score.style.left = centerX + "px";
      score.style.top  = centerY + "px";

      const fontSize = cellPx * 0.96;
      score.style.fontSize = fontSize + "px";
    }

    function positionUI(){
      const cellPx = numVar("--cell") || 142;
      const headerY = 1.0 * cellPx;

      positionScoreRun(cellPx);
      positionScoreDisplay(cellPx);

      const title = document.getElementById("titleLeft");
      title.style.left = "50%";
      title.style.top = headerY + "px";
      title.style.transform = "translate(-50%, -50%)";

      const row11VisualTop = (((11 + HEADER_ROW_OFFSET) - 1) * cellPx);
      const row11CenterY   = row11VisualTop + (cellPx / 2);
      const between10and11 = row11VisualTop;

      const kippBtnsCenterY = between10and11;
      startBtnWrap.style.top = (kippBtnsCenterY - 0) + "px";

      const row9VisualTop  = (((9 + HEADER_ROW_OFFSET) - 1) * cellPx);
      const row10VisualTop = (((10 + HEADER_ROW_OFFSET) - 1) * cellPx);
      const midBetween9and10 = (row9VisualTop + row10VisualTop) / 2;
      hintTitle.style.top = (midBetween9and10 + 40) + "px";

      placeTargetPad_12D_13E(cellPx);
      positionBackButton(cellPx);
    }

    function positionBackButton(cellPx){
      const headerY = 1.0 * cellPx;
      const left = cellPx / 2;
      const top = headerY;

      backBtn.style.left = left + "px";
      backBtn.style.top = top + "px";
      backBtn.style.transform = "translate(-50%, -50%)";
    }

    function placeTargetPad_12D_13E(cellPx){
      const row = 12;
      const col = 4;
      const visualRow = row + HEADER_ROW_OFFSET;

      const left = (col - 1) * cellPx;
      const top  = (visualRow - 1) * cellPx;

      targetPadBtn.style.left = left + "px";
      targetPadBtn.style.top  = top + "px";
      targetPadBtn.style.width  = (2 * cellPx) + "px";
      targetPadBtn.style.height = (2 * cellPx) + "px";
    }

    function setScaleToFitWidth(){
      const cols = numVar("--cols") || 8;
      const cell = numVar("--cell") || 142;

      const gridW = cols * cell;
      const vw = window.innerWidth;

      const targetW = vw * 0.94;
      const scale = Math.min(1, targetW / gridW);

      document.documentElement.style.setProperty("--scale", scale.toFixed(4));
      document.documentElement.style.setProperty("--gridW", gridW + "px");

      const uiscale = 1 / (scale || 1);
      document.documentElement.style.setProperty("--uiscale", uiscale.toFixed(4));

      return { cols, cell, gridW, scale };
    }

    function rebuild(){
      const { cell, scale } = setScaleToFitWidth();
      const vh = window.innerHeight;
      const effectiveLayoutHeight = vh / scale;
      const rows = Math.ceil(effectiveLayoutHeight / cell) + 1;
      const gridH = rows * cell;
      document.documentElement.style.setProperty("--gridH", gridH + "px");

      rebuildColors();
      positionUI();
      updateShadowVisibility();

      if(!wFaceGroup.classList.contains("hidden")) renderW();
      else renderKip();
    }

    window.addEventListener("load", () => {
      rebuild();
      initSounds();

      // Startzustand UI
      btnStart.classList.remove("hidden");
      btnStop.classList.add("hidden");
      btnStartText.classList.add("pulse");
      targetPadBtn.classList.add("hidden");
      kspSlider.disabled = false;
      hintTitle.textContent = "KIPP TIPP";

      reroll12_keepAssigned();
      showW();
      renderW();
      updateScore();
    });

    window.addEventListener("resize", rebuild);

    document.addEventListener("touchmove", (e) => {
      const inRange = e.target && e.target.closest && e.target.closest('input[type="range"]');
      if(inRange) return;
      e.preventDefault();
    }, { passive:false });

    // Intro
    introStartBtn.addEventListener("click", () => {
      introOverlay.classList.add("hidden");
      setTimeout(() => {
        introOverlay.remove();
      }, 400);
    });

    introBackBtn.addEventListener("click", () => {
      window.location.href = "index.html";
    });
  </script>
</body>
</html>
